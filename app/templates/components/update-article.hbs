{{#if updateArticleForm}}
  <h4>Update {{article.headline}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=article.headline}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=article id="content" placeholder=article.content}}
      </div>

      <div class="form-group">
        <label for="authors">Authors</label>
        {{input value=authors id="authors" placeholder=article.authors}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'updateArticleForm'}}>Update Article</button>
  {{/if}}
