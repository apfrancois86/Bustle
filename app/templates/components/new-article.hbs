{{#if addNewArticle}}
  <h1>New Article</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="owner">Headline</label>
        {{input value=headline id="headline"}}
      </div>

      <div class="form-group">
        <label for="type">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="city">Authors</label>
        {{input value=authors id="authors"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveArticle'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
